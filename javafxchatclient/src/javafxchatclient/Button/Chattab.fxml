<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.TextFlow?>

<BorderPane fx:id="borderPane" prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxchatclient.ChattabController">
   <bottom>
      <ButtonBar fx:id="chatbuttonbar" buttonMinWidth="50.0" BorderPane.alignment="CENTER">
        <buttons>
            <TextArea fx:id="sendchattextarea" prefHeight="30.0" wrapText="true" />
          <Button fx:id="sendchatbutton" maxWidth="70.0" minWidth="50.0" mnemonicParsing="false" prefWidth="50.0" text="Send" />
        </buttons>
         <padding>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </padding>
      </ButtonBar>
   </bottom>
   <center>
      <TextFlow fx:id="chatbox" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
